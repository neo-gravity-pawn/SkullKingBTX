{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist/server",
        "strict": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "src",
        "paths": {
            "@core/*": ["core/*"],
            "@helper/*": ["helper/*"],
            "@sandbox/*": [ "sandbox/*" ],
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"        
	],
    "exclude": [
        "dist",
        "node_modules",
        ".vscode"
    ]
}